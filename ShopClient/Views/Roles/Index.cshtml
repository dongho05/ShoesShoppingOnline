<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<section class="">
    <div class="container">
        <div class="row">
            <!-- sidebar -->
            <div class="col-lg-3">
                <!-- Collapsible wrapper -->

            </div>
            <!-- sidebar -->
            <!-- content -->
            <div class="col-lg-9">
                @if (Model != null)
                {
                    <header class="d-sm-flex align-items-center border-bottom mb-4 pb-3">
                        <div class="ms-auto">
                            <div class="btn-group shadow-0 border">
                                <a asp-controller="Roles" asp-action="Create" class="btn btn-primary shadow-0 me-1">Create role</a>
                            </div>
                        </div>
                    </header>
                }


                <div class="row">
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-6 d-flex">
                                <div class="card w-100 my-2 shadow-2-strong">
                                    <p class="card-text">@item.RoleName</p>
                                    <div class="card-body d-flex flex-column">
                                        <div class="d-flex flex-row">
                                        </div>
                                        <div class="card-footer d-flex align-items-end pt-3 px-0 pb-0 mt-auto">
                                            <a asp-controller="Roles" asp-action="Edit" asp-route-roleId="@item.RoleId" class="btn btn-primary shadow-0 me-1">Edit</a>
                                            <a asp-controller="Roles" asp-action="Delete" asp-route-roleId="@item.RoleId" class="btn btn-danger shadow-0 me-1">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    <hr />

                    <!-- Pagination -->
                    <nav aria-label="Page navigation example" class="d-flex justify-content-center mt-3">
                        <ul class="pagination">
                            @if (ViewBag.currentPage != 0)
                            {
                                <li class="page-item">
                                        <a class="page-link" asp-controller="Roles" asp-action="Index" asp-route-currentPage="@(ViewBag.currentPage - 1)" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                            }
                            @for (int i = 0; i <= ViewBag.NumberOfPages; i++)
                            {
                                    <li class="page-item "><a class="page-link" asp-controller="Roles" asp-action="Index" asp-route-currentPage="@i">@i</a></li>

                            }
                            @if (ViewBag.currentPage < ViewBag.NumberOfPages)
                            {
                                <li class="page-item">
                                        <a class="page-link" asp-controller="Roles" asp-action="Index" asp-route-currentPage="@(ViewBag.currentPage + 1)" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            }

                        </ul>
                    </nav>
                    }

                    <!-- Pagination -->
                </div>
            </div>
        </div>
</section>
