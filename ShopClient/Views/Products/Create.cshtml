    <section class="h-100 bg-light">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card card-registration my-4">
                        <div class="row g-0">

                            <div class="col-xl-6">
                                <div class="card-body p-md-5 text-black">
                                    <h3 class="mb-5 text-uppercase">Add a new product</h3>

                                    @*<div class="row">
                                    <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                    <input type="text" id="form3Example1m" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example1m">First name</label>
                                    </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                    <input type="text" id="form3Example1n" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example1n">Last name</label>
                                    </div>
                                    </div>
                                    </div>

                                    <div class="row">
                                    <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                    <input type="text" id="form3Example1m1" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example1m1">Mother's name</label>
                                    </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                    <input type="text" id="form3Example1n1" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example1n1">Father's name</label>
                                    </div>
                                    </div>
                                    </div>*@

                                    <div class="form-outline mb-4">
                                        <input asp-for="ProductName" type="text" id="ProductName" class="form-control form-control-lg" />
                                        <label class="form-label">Product Name</label>
                                    </div>

                                    @*<form method="post" enctype="multipart/form-data" asp-controller="Products" asp-action="Create">*@
                                        <div class="form-outline mb-4">
                                            <div>

                                                <input class="form-control form-control-lg" id="formFileLg" asp-for="ImageProduct" name="files" type="file" multiple />
                                                <div class="small text-muted mt-2">
                                                    Upload image product or any other relevant file. Max file
                                                    size 50 MB
                                                </div>

                                            </div>
                                            <div>

                                                <h6 class="form-label">Upload image product</h6>

                                            </div>
                                            @*<div class="form-label">
                                                <input type="submit" value="Upload" />
                                            </div>*@
                                        </div>
                                    @*</form>*@

                                    <div class="form-outline mb-4">
                                        <div>

                                            <textarea asp-for="Describe" class="form-control form-control-lg" rows="3" placeholder="Describe about product"></textarea>

                                        </div>
                                        <div>

                                            <h6 class="form-label">Description</h6>

                                        </div>
                                    </div>

                                    <div class="d-md-flex justify-content-start align-items-center mb-4 py-2">

                                        <h6 class="mb-0 me-4">Is saled? : </h6>

                                        <div class="form-check form-check-inline mb-0 me-4">
                                            <input asp-for="IsSaled" class="form-check-input" type="radio" name="IsSaled" value="True" />
                                            <label class="form-check-label">Yes</label>
                                        </div>

                                        <div class="form-check form-check-inline mb-0 me-4">
                                            <input asp-for="IsSaled" class="form-check-input" type="radio" name="IsSaled" value="False" />
                                            <label class="form-check-label">No</label>
                                        </div>


                                    </div>
                                    <div class="d-md-flex justify-content-start align-items-center mb-4 py-2">

                                        <h6 class="mb-0 me-4">Is activated? : </h6>

                                        <div class="form-check form-check-inline mb-0 me-4">
                                            <input asp-for="IsActivated" class="form-check-input" type="radio" name="IsActivated" value="True" />
                                            <label class="form-check-label">Yes</label>
                                        </div>

                                        <div class="form-check form-check-inline mb-0 me-4">
                                            <input asp-for="IsActivated" class="form-check-input" type="radio" name="IsActivated" value="False" />
                                            <label class="form-check-label">No</label>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">

                                            <select class="form-control form-control-lg" asp-for="BrandId" asp-items="@ViewBag.BrandId"></select>
                                            <div>

                                                <h6 class="form-label">Brand</h6>

                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-4">

                                            <select class="form-control form-control-lg" asp-for="CategoryId" asp-items="@ViewBag.CategoryId"></select>
                                            <div>

                                                <h6 class="form-label">Category</h6>

                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="text" id="Discount" class="form-control form-control-lg" />
                                        <label class="form-label" for="form3Example9">Discount</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="text" id="UnitPrice" class="form-control form-control-lg" />
                                        <label class="form-label" for="form3Example90">Unit price</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="text" id="UnitInStock" class="form-control form-control-lg" />
                                        <label class="form-label" for="form3Example99">Unit in stock</label>
                                    </div>


                                    <div class="d-flex justify-content-end pt-3">
                                        <button type="button" class="btn btn-light btn-lg">Reset all</button>
                                        <input type="submit" value="Create" class="btn btn-success btn-lg" />
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>
</form>