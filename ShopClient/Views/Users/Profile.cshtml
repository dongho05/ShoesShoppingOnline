@{
}
<section style="background-color: #eee;">
    <form asp-controller="Users" asp-action="Profile" enctype="multipart/form-data" method="post">
        <input type="hidden" asp-for="UserId" value="@Model.UserId" />
        <input type="hidden" asp-for="Password" value="@Model.Password" />
        <input type="hidden" asp-for="UserName" value="@Model.UserName" />
        <input type="hidden" asp-for="RoleId" value="@Model.RoleId" />
        <div class="container py-5">
            <div class="row">
                <div class="col">
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="@Model.AvatarImage" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px;">

                            

                            <h5 class="my-3">@Model.UserName</h5>
                            <p class="text-muted mb-4">@Model.Address</p>
                            <div class="d-flex justify-content-center mb-2">
                                <input type="submit" class="btn btn-primary" value="Update" />
                                <input class="form-control form-control-sm" id="formFileLg" name="files" type="file" multiple />
                            </div>
                        </div>
                    </div>
                    <div class="card mb-4 mb-lg-0">
                        <div class="card-body p-0">
                            <ul class="list-group list-group-flush rounded-3">
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    @*<i class="fas fa-globe fa-lg text-warning"></i>*@
                                    Email: <p class="mb-0">@Model.Email</p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Full Name</p>
                                </div>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="FullName" class="form-control" value="@Model.FullName" />
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Email</p>
                                </div>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="Email" class="form-control" value="@Model.Email" />
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Phone</p>
                                </div>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="Phone" class="form-control" value="@Model.Phone" />
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Birthday</p>
                                </div>
                                <div class="col-sm-9">
                                    <input type="datetime-local" asp-for="BirthDay" class="form-control" value="@(Model.BirthDay.HasValue ? Model.BirthDay.Value.ToString("yyyy-MM-ddTHH:mm") : "")" />
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Address</p>
                                </div>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="Address" class="form-control" value="@Model.Address" />
                                </div>
                            </div>
                            <div class="row">
                                <h6 class="mb-0 me-4">Gender : </h6>
                                <div class="form-check form-check-inline mb-0 me-4">
                                    <input asp-for="Gender" class="form-check-input" type="radio" name="Gender" value="True" checked="@(Model.Gender ? "checked" : null)" />
                                    <label class="form-check-label">Male</label>
                                </div>

                                <div class="form-check form-check-inline mb-0 me-4">
                                    <input asp-for="Gender" class="form-check-input" type="radio" name="Gender" value="False" checked="@(Model.Gender ? null : "checked")" />
                                    <label class="form-check-label">Female</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-4 mb-md-0">
                                <div class="card-body">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card mb-4 mb-md-0">
                                <div class="card-body">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>